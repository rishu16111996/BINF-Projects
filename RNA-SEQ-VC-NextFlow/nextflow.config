// Nextflow pipeline configuration for DM1 analysis
params {
    // Input/Output settings
    reads          = "data/fastq"               // Directory containing FASTQ files (paired-end, *_1.fastq.gz and *_2.fastq.gz)
    outdir         = "results"                  // Directory for all output files
    // Reference files (to be provided by user)
    genome         = "/path/to/GRCh38/genome.fa"        // Reference genome FASTA (hg38)
    gtf            = "/path/to/GRCh38/annotation.gtf"   // Reference gene annotation GTF (for STAR and gene counts)
    star_index_dir = "/path/to/GRCh38/star_index"       // Pre-built STAR index directory for first pass (without novel junctions)
    knownSites     = "/path/to/resources/1000G_phase1.snps.high_confidence.hg38.vcf"    // Known SNP set for BQSR
    knownIndels    = "/path/to/resources/Mills_and_1000G_gold_standard.indels.hg38.vcf" // Known indels for BQSR
    dbsnp          = "/path/to/resources/Homo_sapiens_assembly38.dbsnp.vcf"             // dbSNP database for BQSR
}

// Use conda for software dependencies
process {
    withName: 'FastQC|TrimGalore|STAR.*|AddReadGroups|MarkDuplicates|SplitNcigarReads|BaseRecalibrator.*|ApplyBQSR.*|HaplotypeCaller|CombineGVCFs|GenotypeGVCFs|MultiQC' {
        conda = "${baseDir}/environment.yml"
        cpus  = 8  // default CPU cores for processes (adjust per process in main.nf if needed)
        memory = "16 GB"
    }
}
